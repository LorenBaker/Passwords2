<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <Button
        android:id="@+id/btnSelectUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/setting_button"
        android:text="@string/btnSelectUser_text" />

    <Button
        android:id="@+id/btnUserSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/setting_button"
        android:text="@string/btnUserSettings_text" />


    <Button
        android:id="@+id/btnSelectDropboxFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/setting_button"
        android:text="Select Dropbox Folder\nCurrent Folder:\n" />

    <Button
        android:id="@+id/btnChangeAppPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/setting_button"
        android:text="@string/btnChangeAppPassword_text" />

    <Button
        android:id="@+id/btnSelectPasswordLongevity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/setting_button"
        android:text="Select Password Longevity\nCurrent Longevity: 30 min" />
</LinearLayout>