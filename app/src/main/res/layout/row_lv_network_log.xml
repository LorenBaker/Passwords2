<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:background="@drawable/rec_opal_no_stroke"
    android:paddingTop="@dimen/list_view_double_row_padding"
    android:paddingBottom="@dimen/list_view_double_row_padding"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tvGenoaListViewRowSmallText"
            android:text="12/31/2015 11:43 am" />

        <TextView
            android:id="@+id/tvRev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tvGenoaListViewRowSmallText"
            android:text="Rev: 2e3dcOc38f816" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        style="@style/tvGenoaListViewRowSmallText"
        android:text="U" />

    <TextView
        android:id="@+id/tvNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        style="@style/tvGenoaListViewRowSmallText"
        android:text="Mobile" />

    <TextView
        android:id="@+id/tvBytes"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="1dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        style="@style/tvGenoaListViewRowSmallText"
        android:text="1,234 KB" />

</LinearLayout>